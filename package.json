{
  "name": "ms-tpl-node",
  "version": "2.0.0",
  "description": "Micro Service template for NodeJS in Typescript",
  "main": "dist/src/server.js",
  "scripts": {
    "test": "npm run test:clearCache && npm run test:only -- --forceExit --passWithNoTests",
    "test:clearCache": "jest --clearCache",
    "test:only": "jest -c jest.config.js --detectOpenHandles",
    "test:dev": "npm run test:only -- --watch",
    "build": "tsc",
    "postbuild": "ef-tspm",
    "start": "node --inspect=5858 -r ts-node/register src/server.ts",
    "start:watch": "nodemon",
    "lint": "eslint src/ --fix --ext .ts",
    "coverage": "npm t -- --coverage",
    "commit": "git-cz",
    "health-check": "node dist/scripts/healthCheck.js",
    "production": "node dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git@babustack:BabuStack/ms-graph.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run coverage && npm run build"
    }
  },
  "keywords": [
    "micro-service",
    "template",
    "node",
    "typescript"
  ],
  "author": "Akash Babu <babubrothers65@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "^8.0.8",
    "async-local-storage": "^2.3.1",
    "deep-equal": "^2.0.3",
    "ip": "^1.1.5",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "logler": "^1.1.2",
    "object-assign-deep": "^0.4.0",
    "request-ip": "^2.1.3",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@ef-carbon/tspm": "^2.2.5",
    "@types/deep-equal": "^1.0.1",
    "@types/jest": "^26.0.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa__router": "^8.0.2",
    "@types/mongodb": "^3.5.25",
    "@types/node": "^14.0.21",
    "@types/object-assign-deep": "^0.4.0",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.3.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-serial-runner": "^1.1.0",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  },
  "_moduleAliases": {
    "~": "dist/src"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}